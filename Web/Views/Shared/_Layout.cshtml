@using Microsoft.AspNetCore.Identity
@inject SignInManager<Data.ApplicationUser> SignInManager
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .site-header {
            overflow: hidden;
        }
        .site-header::-webkit-scrollbar {
            height: 0;
            width: 0;
        }
    </style>
</head>
<body>
    <header class="mine site-header">
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:teal">

            <a class="navbar-brand" href="#">MaxCookBook</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Recipe" asp-action="Show">Коллекция рецетов</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Recipe" asp-action="AddorEdit">Опубликовать рецепт</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="ReportPanel">Репорт-панель</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="AdminPanel">Админ-панель</a>
                    </li>
                </ul>
                <form class="form-inline">
                    <a asp-area="" asp-controller="Recipe" asp-action="SetLanguage" asp-route-culture="ru" asp-route-returnAction="@ViewData["returnAction"]">
                        <img style="max-height:32px; max-width:32px" src="@Localizer["imgRu"]" />
                    </a>
                    <a asp-area="" asp-controller="Recipe" asp-action="SetLanguage" asp-route-culture="en" asp-route-returnAction="@ViewData["returnAction"]">
                        <img style="max-height:32px; max-width:32px" src=@Localizer["imgEn"] />
                    </a>
                    <a asp-area="" asp-controller="Recipe" asp-action="SetLanguage" asp-route-culture="de" asp-route-returnAction="@ViewData["returnAction"]">
                        <img style="max-height:32px; max-width:32px" src=@Localizer["imgDe"] />
                    </a>
                </form>
                @if (SignInManager.IsSignedIn(User))
                {
                    <form class="form-inline" method="post" asp-controller="Auth" asp-action="Logout">
                        <a class="nav-link text-light" asp-area="" asp-controller="Profile" asp-action="Info">@User.Identity.Name</a>
                        <button type="submit" class="btn btn-danger">Выйти</button>
                    </form>
                }
                else
                {
                    <a class="nav-link text-light" asp-area="" asp-controller="Auth" asp-action="Registration">Регистрация</a>
                    <a class="nav-link text-light" asp-area="" asp-controller="Auth" asp-action="Login">Вход</a>
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3" style="margin-top:65px">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

