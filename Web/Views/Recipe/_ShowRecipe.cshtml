@model DetailPostViewModel

@{
    ViewData["Title"] = "_ShowRecipe";
}

<script src="https://kit.fontawesome.com/034d9c5f61.js" crossorigin="anonymous"></script>
<style>
    img {
        width: 100%;
        height: 30vw;
        object-fit: cover;
    }
</style>


<div class="card-header text-center">
    <h1>@Model.Title</h1>
</div>
<div class="card-body container-fluid">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-main-tab" data-toggle="tab" href="#nav-main" role="tab" aria-controls="nav-main" aria-selected="true">Краткое описание</a>
            <a class="nav-item nav-link" id="nav-ingredients-tab" data-toggle="tab" href="#nav-ingredients" role="tab" aria-controls="nav-ingredients" aria-selected="false">Ингредиенты</a>
            <a class="nav-item nav-link" id="nav-methods-tab" data-toggle="tab" href="#nav-methods" role="tab" aria-controls="nav-methods" aria-selected="false">Способ приготовления</a>
            <a class="nav-item nav-link" id="nav-tips-tab" data-toggle="tab" href="#nav-tips" role="tab" aria-controls="nav-tips" aria-selected="false">Подсказки и советы</a>
            <a class="nav-item nav-link" id="nav-comments-tab" data-toggle="tab" href="#nav-comments" role="tab" aria-controls="nav-comments" aria-selected="false">Отзывы</a>
        </div>
    </nav>  
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-main" role="tabpanel" aria-labelledby="nav-main-tab">
            <div>
                <img src="@Model.ImagePath" alt="recipe image cap" />
                <h2>@Model.Title</h2>
                <hr />
            </div>
        </div>

        <div class="tab-pane fade" id="nav-ingredients" role="tabpanel" aria-labelledby="nav-ingredients-tab">
            <div id="ingredientsContainer">
                @foreach(var item in Model.Ingredients)
                {
                    <p>@item.Name</p>
                }
            </div>
        </div>
        <div class="tab-pane fade" id="nav-methods" role="tabpanel" aria-labelledby="nav-methods-tab">
            <div id="methodsContainer">
                @for (int i = 0; i < Model.Methods.Count(); i++)
                {
                    <p>@(i+1). @Model.Methods[i].Name</p>
                }
            </div>
        </div>
        <div class="tab-pane fade" id="nav-tips" role="tabpanel" aria-labelledby="nav-tips-tab">
            <div id="tipsContainer">
                @if (Model.Tips.Count == 1)
                {
                    <h3 class="text-center">Автор решил оставить советы при себе!</h3>
                }
                else
                {
                    @for (int i = 0; i < Model.Tips.Count(); i++)
                    {
                        <p>@(i+1). @Model.Tips[i].Name</p>
                    }
                }
            </div>
        </div>

        <div class="tab-pane fade" id="nav-comments" role="tabpanel" aria-labelledby="nav-comments-tab">
            <div id="commentsContainer">

            </div>
        </div>

    </div>
    
</div>

<script type="text/javascript">
    $('#nav-main-tab').on('hide.bs.tab', function (e) {
        $('#commentsContainer').empty();
    });


    $('#nav-comments-tab').click(function () {
        $.ajax({
            type: 'POST',
            url: 'PartialComments',
            dataType: 'html',
            data: { 'postId': @Model.PostId },
            success: function (data) {
                console.log("Get comments");
                $('#commentsContainer').append(data);
            },
            error: function (err) {
                console.log(err);
            }
        });
    })
</script>
